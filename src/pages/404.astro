---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Not Found">
  <div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
      <p class="text-2xl text-gray-700 mb-8">Page not found</p>
      <p class="text-gray-600 mb-8">Sorry, the page you're looking for doesn't exist.</p>
      <a href="/" class="inline-block bg-primary text-white px-8 py-3 rounded-lg hover:bg-primary-dark transition-colors">
        Go back home
      </a>
    </div>
  </div>
</Layout>
